%tr{:class => row_class(row_counter), :title => invoice.notes}
  %td= invoice.name
  %td= invoice.client.name
  %td.calign= format_date(invoice.created_at)
  %td.calign= invoice.issued_at && format_date(invoice.issued_at)
  %td.actions.ralign
    = link_to image_tag('pencil.png'), edit_invoice_url(invoice), :title => 'Edit'
    = link_to image_tag('cross.png'), invoice_url(invoice), :title => 'Delete'
    = link_to image_tag('csv.png'), invoice_url(invoice, :format => :csv), :title => 'Export to CSV'
    = link_to image_tag('pdf.png'), invoice_url(invoice, :format => :pdf), :title => 'Export to PDF'
