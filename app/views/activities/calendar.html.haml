- user_id = @user && @user.id

.clearfix
  - options = {:class => :right}
  - options[:style] = 'display: none' unless admin_or_client?
  - form_tag calendar_activities_path, options do
    = hidden_field_tag :current, @current
    = select_tag :user_id, options_from_collection_for_select(@users, :id, :name, user_id)
    = submit_tag :ok
  %h1.left
    Calendar view
    
%table.calendar{:cellspacing => 1}
  %caption
    = link_to '<< Previous', calendar_activities_path(:current => @current.prev_month, :user_id => user_id)
    %span= @current.strftime('%B %Y')
    = link_to 'Next >>', calendar_activities_path(:current => @current.next_month, :user_id => user_id)
  %tr
    %th Mon
    %th Tue
    %th Wed
    %th Thu
    %th Fri
    %th Sat
    %th Sun
  
  - groups = @activities.group_by(&Activity::GROUP_BY_DATE_BLOCK)
  - 0.upto(@rows) do |row|
    %tr
      - 0.upto(6) do |col|
        - day = @first_day.advance(:days => row * 7 + col + 1 - @first_day.wday)
        - activities = groups[day] || []
        - has_activity = !activities.empty?
        - enabled = @first_day.month == day.month
        - weekend = col > 4
        - day_off = @days_off_hash[day]
        - classes = [:cell]
        - classes << (weekend && :weekend || enabled && :enabled || :disabled)
        - classes << :active if has_activity
        - classes << :day_off if day_off
        
        %td{:class => classes.join(' '), :id => day.strftime('%Y-%m-%d')}
          %p.mday
            = day.mday
          - if editor?
            .day_off_icon{:style => 'display: none'}
              = (day_off.nil? ? day_off_tag : revert_day_off_tag) if enabled && !has_activity && !weekend
          .content{:style => 'display: none'}
            = render :partial => 'cell', :object => activities, :locals => {:activities => activities}
#activity_details.cell{:style => 'display: none'}

- if editor?
  #day_off_tag{:style => 'display: none'}
    = day_off_tag
    = revert_day_off_tag

  #activity_template{:style => 'display: none'}
    = render :partial => 'cell_activity', :locals => {:activity => Activity.new}
