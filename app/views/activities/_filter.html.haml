%h2
  Filter

- form_for :filter, :url => activities_url, :html => {:method => :get} do |i|
  .item.clearfix
    .label
      = i.label :client
    .input
      = i.select :client, options_from_collection_for_select(Client.all, :id, :name)
  .item.clearfix
    .label
      = i.label :project
    .input
      = i.select :project, options_from_collection_for_select(Project.all, :id, :name)
  .item.clearfix
    .label
      = i.label :role
    .input
      = i.select :role, options_from_collection_for_select(Role.all, :id, :name)
  .item.clearfix
    .label
      = i.label :user
    .input
      = i.select :user, options_from_collection_for_select(User.all, :id, :name)
  .item.clearfix.datepicker
    .label
      = i.label :from
    .input
      = i.text_field :date_from
      = image_tag 'datepicker/cal.gif'
  .item.clearfix.datepicker
    .label
      = i.label :to
    .input
      = i.text_field :date_to
      = image_tag 'datepicker/cal.gif'
  .item.clearfix
    .label
      Include
    .radiogroup
      .radio
        = i.radio_button :include, :all
        = i.label :include_all, 'All'
      .radio
        = i.radio_button :include, :invoiced
        = i.label :include_invoiced, 'Invoiced'
      .radio
        = i.radio_button :include, :not_invoiced
        = i.label :include_not_invoiced, 'Not invoiced'
  .item.last
    = i.submit 'Submit', :class => :no_label
