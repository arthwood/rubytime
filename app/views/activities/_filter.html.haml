%h2
  Filter

- form_for @filter, :url => search_activities_url, :html => {:method => :post, :id => nil, :class => nil} do |i|
  - if admin?
    .item.clearfix
      .label
        = i.label :user_id, 'User'
      .input
        = i.select :user_id, options_from_collection_for_select(@users, :id, :name, @filter.user_id.to_i), :include_blank => 'All users...'
    .item.clearfix
      .label
        = i.label :client_id, 'Client'
      .input
        = i.select :client_id, options_from_collection_for_select(@clients, :id, :name, @filter.client_id.to_i), :include_blank => 'All clients...'

  .item.clearfix
    .label
      = i.label :project_id, 'Project'
    .input
      = i.select :project_id, options_from_collection_for_select(@projects, :id, :name, @filter.project_id.to_i), :include_blank => 'All projects...'
  .item.clearfix
    .label
      = i.label :period, 'Select period'
    .input
      = i.select :period, daterange_options(@filter.period), :include_blank => 'Select...'
  .item.clearfix.datepicker
    .label
      = i.label :from, 'from'
    .input
      = i.text_field :from, :readOnly => true
      = image_tag 'datepicker/cal.gif'
  .item.clearfix.datepicker
    .label
      = i.label :to, 'to'
    .input
      = i.text_field :to, :readOnly => true
      = image_tag 'datepicker/cal.gif'
  - if admin?
    .item.clearfix
      .label
        Include
      .radiogroup
        .radio
          = i.radio_button :include, :all
          = i.label :include_all, 'All'
        .radio
          = i.radio_button :include, :invoiced
          = i.label :include_invoiced, 'Invoiced'
        .radio
          = i.radio_button :include, :not_invoiced
          = i.label :include_not_invoiced, 'Not invoiced'
  .item.last
    = i.submit 'Submit', :class => :no_label
