- create_mode = @activity.new_record?

- form_for :activity, :url => (create_mode ? activities_url : activity_url(@activity)), :html => {:method => (create_mode ? :post : :put)} do |i|
  - if admin?
    .item.clearfix
      .label
        = i.label :user_id, 'User'
      .input
        = i.select :user_id, options_from_collection_for_select(User.employees, :id, :name, @activity.user_id)
        = error_field(i, :user_id)
  .item.clearfix
    .label
      = i.label :project_id, 'Project'
    .input
      = i.select :project_id, options_from_collection_for_select(Project.all, :id, :name, @activity.project_id)
      = error_field(i, :project_id)
  .item.clearfix.datepicker
    .label
      = i.label :date
    .input
      = i.text_field :date
      = image_tag 'datepicker/cal.gif'
      = error_field(i, :date)
  .item.clearfix
    .label
      = i.label :time_spent
    .input
      = i.text_field :time_spent
      = error_field(i, :time_spent)
    .note.no_label
      e.g. 7:30
  .item.clearfix
    .label
      = i.label :comments
    .input
      = i.text_area :comments
      = error_field(i, :comments)
  .item.last
    = i.submit((create_mode ? 'Add' : 'Save'), :class => :no_label)
    or
    = link_to 'Cancel', '#'
