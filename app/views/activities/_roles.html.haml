.roles
  - group_by_roles = project_activities.group_by {|i| i.user.role}
  - group_by_roles.each_pair do |role, role_activities|
    .role[role]
      %h4
        = image_tag 'role.png'
        Role:
        %span
          = role.name
        
        = "(#{Activity.total_value(role_activities)})"
      .users
        - group_by_users = role_activities.group_by &:user
        - group_by_users.each_pair do |user, user_activities|
          .user[user]
            %h4
              = user.name
                
            = render :partial => 'table', :locals => {:user_activities => user_activities}
