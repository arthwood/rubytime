%tr{:class => row_class(currency_row_counter)}
  %td= currency.name
  %td= currency.plural
  %td.centered= currency.symbol
  %td.centered= verbalize(currency.prefix)
  %td= currency_example(currency)
  %td.actions
    = link_to image_tag('pencil.png'), edit_currency_url(currency)
    = link_to image_tag('cross.png'), currency_url(currency)
